@model ShortLink.Application.DTOs.Account.RegisterUserDto;
@{
	ViewData["Title"] = "Register";
}



<section class="h-100 mt-5">
	<div class="container h-100">
		<div class="row justify-content-md-center h-100">
			<div class="card-wrapper">
				<div class="card fat">
					<div class="card-body">
						<h4 class="card-title">Register</h4>
						<form method="POST" class="my-login-validation" asp-controller="Account" asp-action="Register">
							<div class="form-group">
								<label for="Mobile">Phone Number</label>
								<input asp-for="Mobile" class="form-control">
								<span class="text-danger" asp-validation-for="Mobile"></span>
							</div>
							<div class="form-group">
								<label for="Mobile">First Name</label>
								<input asp-for="FirstName" class="form-control">
								<span class="text-danger" asp-validation-for="FirstName"></span>
							</div>							
							<div class="form-group">
								<label for="Mobile">Last Name</label>
								<input asp-for="LastName" class="form-control">
								<span class="text-danger" asp-validation-for="LastName"></span>
							</div>							
							<div class="form-group">
								<label for="Mobile">Password</label>
								<input type="password" asp-for="Password" class="form-control">
								<span class="text-danger" asp-validation-for="Password"></span>
							</div>							<div class="form-group">
								<label for="Mobile">Confirm Password</label>
								<input type="password" asp-for="RePassword" class="form-control">
								<span class="text-danger" asp-validation-for="RePassword"></span>
							</div>


							<div class="form-group m-0">
								<button type="submit" class="btn btn-primary btn-block">
									Register
								</button>
							</div>
						</form>
					</div>
				</div>

			</div>
		</div>
	</div>
</section>
